  <!-- 根据配置渠道信息查询价格配置 -->
  <select id="queryRegionEntityByChannelConfig" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tb_region_price
    where channel_id = #{channelId}
    <if test="companyId != null">
      AND company_id = #{companyId,jdbcType=INTEGER}
    </if>
    <if test="merchantId != null">
      AND merchant_id = #{merchantId,jdbcType=INTEGER}
    </if>
    <if test="shopId != null">
      AND shop_id = #{shopId,jdbcType=INTEGER}
    </if>
  </select>

  <!-- 根据公司id查询价格配置 -->
  <select id="selectByCompanyId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from tb_region_price
    where company_id = #{companyId}
    and channel_id = #{channelId}
  </select>

  <!-- 根据商户id查询价格配置 -->
  <select id="selectByMerchantId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tb_region_price
    where merchant_id = #{merchantId}
    and channel_id = #{channelId}
  </select>

  <!-- 根据渠道id和机构id删除配置 -->
  <delete id="deleteRegionPriceByMerchantIdOrCompanyId" parameterType="java.util.Map">
    delete from tb_region_price
    where channel_id = #{channelId}
    <if test="merchantId != null">
      and merchant_id = #{merchantId}
    </if>
    <if test="companyId != null">
      and company_id = #{companyId}
    </if>
  </delete>

  <!-- 根据渠道id和机构id删除配置 -->
  <delete id="deleteRegionPrice" parameterType="java.lang.Integer">
    delete from tb_region_price
    where id = #{id}
  </delete>

  <!-- 新增城市等级价格 -->
  <insert id="insertRegionPrice" parameterType="com.lbx.distribution.manageserver.entity.channel.RegionPriceEntity">
