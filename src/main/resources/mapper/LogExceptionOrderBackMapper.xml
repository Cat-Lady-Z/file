<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lbx.distribution.manageserver.mapper.LogExceptionOrderBackMapper">
  <resultMap id="BaseResultMap" type="com.lbx.distribution.manageserver.entity.log.LogExceptionOrderBack">
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="order_id" property="orderId" jdbcType="VARCHAR" />
    <result column="channel_id" property="channelId" jdbcType="INTEGER" />
    <result column="exception_code" property="exceptionCode" jdbcType="CHAR" />
    <result column="exception_msg" property="exceptionMsg" jdbcType="VARCHAR" />
    <result column="exception_body" property="exceptionBody" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <resultMap id="DetailResultMap" type="com.lbx.distribution.manageserver.entity.log.LogExceptionOrderBackDetail">
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="order_id" property="orderId" jdbcType="VARCHAR" />
    <result column="channel_id" property="channelId" jdbcType="INTEGER" />
    <result column="exception_code" property="exceptionCode" jdbcType="CHAR" />
    <result column="exception_msg" property="exceptionMsg" jdbcType="VARCHAR" />
    <result column="exception_body" property="exceptionBody" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="channel_name"  property="channelName" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List">
    id, order_id, channel_id, exception_code, exception_msg, exception_body, create_time
  </sql>
  <sql id="Detail_Column_List">
    logexception.id, logexception.order_id, logexception.channel_id, logexception.exception_code, logexception.exception_msg
    , logexception.exception_body, logexception.create_time
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from log_exception_order_back
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByOrderId" parameterType="java.lang.String" resultMap="DetailResultMap">
    select
    <include refid="Detail_Column_List" />, chan.channel_name as channel_name
    from log_exception_order_back `logexception`
    LEFT JOIN tb_channel `chan` on logexception.channel_id = chan.channel_id
    where logexception.order_id = #{orderId,jdbcType=VARCHAR}
  </select>
</mapper>