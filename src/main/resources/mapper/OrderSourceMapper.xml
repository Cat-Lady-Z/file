<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lbx.distribution.manageserver.mapper.OrderSourceMapper">
  <resultMap id="OrderSourceMap" type="com.lbx.distribution.manageserver.entity.order.OrderSourceEntity">
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="merchant_id" property="merchantId"  jdbcType="INTEGER" />
    <result column="source_type" property="sourceType" jdbcType="INTEGER" />
    <result column="source_desc" property="sourceDesc" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_sql">
    id, merchant_id, source_type, source_desc
  </sql>

  <!--查询商户订单来源列表-->
  <select id="queryOrderSourceTypeList" resultMap="OrderSourceMap">
    select 
    <include refid="Base_sql"/>
    from tb_order_source
    where
    1=1
    <if test="merchantId != null">
      AND merchant_id= #{merchantId}
    </if>
  </select>

  <!--查询所有户订单来源列表-->
  <select id="queryAllOrderSourceTypeList" resultMap="OrderSourceMap">
    select
    id,
    merchant_id,
    source_type,
    source_desc
    from tb_order_source
  </select>
</mapper>